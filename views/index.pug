extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1.title May the Code be with you

      p.lead.portfolio-content
        | Here's my Treehouse Projects showcase where you may find each one of them with a litle "What's it for" 
        | and over time will be showing up other and amazing projects outflowed from my mind
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each project in projects
          .cell
            a(href=`/projects/${project.id}`)
              img.thumbnail(src=`${project.image_urls[0]}`)
              h5= project.project_name


      
